{
  "name": "guess-the-pokemon",
  "version": "1.0.0",
  "description": "Simple Pokemon guessing game built with React",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "concurrently \"pnpm --filter guess-the-pokemon-backend dev\" \"pnpm --filter guess-the-pokemon-frontend dev\"",
    "dev:frontend": "pnpm --filter guess-the-pokemon-frontend dev",
    "dev:backend": "pnpm --filter guess-the-pokemon-backend dev",
    "build": "pnpm --filter guess-the-pokemon-frontend build",
    "start": "pnpm --filter guess-the-pokemon-backend start",
    "preview": "pnpm --filter guess-the-pokemon-frontend preview",
    "lint": "pnpm --filter guess-the-pokemon-frontend lint && pnpm --filter guess-the-pokemon-backend lint",
    "format": "pnpm --filter guess-the-pokemon-frontend format && pnpm --filter guess-the-pokemon-backend format",
    "clean": "pnpm --filter guess-the-pokemon-frontend clean",
    "install:all": "pnpm install"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
